<form autocomplete="off" class="actor--mob">
	<div class="avatar"></div>
	<input
		type="text"
		class="name wide masked"
		name="name"
		value="{{actor.name}}"
	>
	<label class="initiative masked-input">
		Initiative:
		<input
			type="number"
			class="right"
			name="system.initiative"
			value="{{system.initiative}}"
		>
	</label>
	<label class="bytes masked-input">
		Bytes:
		<input
			type="number"
			class="right"
			name="system.bytes"
			value="{{system.bytes}}"
		>
	</label>
	<label class="immune wide masked-input">
		Drops:
		<input
			type="text"
			class="left"
			name="system.drops"
			value="{{system.drops}}"
		>
	</label>
	<label class="bonus masked-input">
		Bonus:
		<input
			type="number"
			class="right"
			name="system.bonus"
			value="{{system.bonus}}"
		>
	</label>
	<label class="morale masked-input">
		Morale:
		<input
			type="number"
			class="right"
			name="system.morale"
			value="{{system.morale}}"
		>
	</label>
	<label class="weak wide masked-input">
		Weak:
		<input
			type="text"
			class="left"
			name="system.weak"
			value="{{system.weak}}"
		>
	</label>
	<label class="immune wide masked-input">
		Immune:
		<input
			type="text"
			class="left"
			name="system.immune"
			value="{{system.immune}}"
		>
	</label>
	<div class="dice">
		Dice:
		{{#each system.dice as | die |}}
			<button
				type="button"
				class="neutral reduced-padding"
				data-roll-formula="{{die.count}}d{{die.sides}}"
			>
				{{die.count}}d{{die.sides}}
				{{#if (gt die.repeat 1)}}
					x {{die.repeat}}
				{{/if}}
			</button>
		{{/each}}
		<div style="flex-grow: 1"></div>
		<button class="confirm edit-dice">Edit</button>
	</div>
	<label class="description masked-textarea">
		Description:
		<textarea
			name="system.description"
		>{{system.description}}</textarea>
	</label>
	<label class="stunts masked-textarea">
		Stunts:
		<textarea
			name="system.stunts"
		>{{system.stunts}}</textarea>
	</label>
</form>